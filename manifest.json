{
  "manifest_version": 3,
  "name": "Productivity Hub",
  "version": "2.0.0",
  "description": "Elegant sticky notes and daily task tracker for your new tab page",
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Productivity Hub",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["newtab.html", "newtab.css", "modules/*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}